@font-face
  font-family 'Oswald'
  src: url('../fonts/Oswald/fonts/Oswald-Regular.eot?-q3i5sn')
  src: url('../fonts/Oswald/fonts/Oswald-Regular.eot?#iefix-q3i5sn') format('embedded-opentype'),
  url('../fonts/Oswald/fonts/Oswald-Regular.woff?-q3i5sn') format('woff'),
  url('../fonts/Oswald/fonts/Oswald-Regular.ttf?-q3i5sn') format('truetype'),
  url('../fonts/Oswald/fonts/Oswald-Regular.svg?-q3i5sn#Oswald-Regular') format('svg')
  font-weight normal
  font-style normal
@font-face
  font-family 'OpenSans'
  src: url('../fonts/OpenSans/OpenSans.eot?-q3i5sn')
  src: url('../fonts/OpenSans/OpenSans.eot?#iefix-q3i5sn') format('embedded-opentype'),
  url('../fonts/OpenSans/OpenSans.woff?-q3i5sn') format('woff'),
  url('../fonts/OpenSans/OpenSans.ttf?-q3i5sn') format('truetype'),
  url('../fonts/OpenSans/OpenSans.svg?-q3i5sn#Oswald-Regular') format('svg')
  font-weight normal
  font-style normal

@import 'nib/vendor'

vendor-prefixes = o ms moz webkit official

body
  background #1abc9c
  font-size 16px
  margin 0
  padding 0
  position relative
  transition 2s all ease
footer
  background rgba(0,0,0,0.2)
  bottom 0
  font-family 'Oswald'
  padding 1rem 0
  position fixed
  text-align center
  width 100%
#data_wrapper
  background rgba(0,0,0,0.8)
  border-radius 25px
  color white
  display inline-block
  font-family 'Oswald'
  margin-top 1rem
  padding 1rem 3rem
  position relative
  &:before
    border-left 15px solid transparent
    border-right 15px solid transparent
    border-top 10px solid rgba(0,0,0,0.8)
    content ""
    left 50%
    margin-left -15px
    position absolute
    top 100%
#div1
  margin-top 5rem
  text-align center
  z-index 1000
#div2
  background white
  box-shadow 1px 2px 1px rgba(0,0,0,0.3)
  font-family 'Arial'
  padding 3rem
  margin 0 0 3.5rem 0
  text-align center
  z-index 1000
#div3
  left 0
  position fixed
  text-align center
  top 0
  z-index 1
  & img
    margin 0
    padding 0
    width 100%
    z-index 1
#titlek
  color white
  font-family 'Oswald'
  font-size 4rem
  margin-bottom 0
  text-shadow 1px 1px 1px rgba(0,0,0,0.5)
#weather
  background #e74c3c
  border-radius 50%
  color white
  padding 0.8rem 0.5rem
  position absolute
  right -20px
  top -5px
